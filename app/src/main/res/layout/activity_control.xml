<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ControlActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_up" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_stop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_up"
            android:id="@+id/btn_stop" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_stop"
            android:id="@+id/btn_down" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_rightup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_up"
            app:layout_constraintTop_toTopOf="@id/btn_up"
            android:id="@+id/btn_rightup" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_rightstop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_stop"
            app:layout_constraintTop_toBottomOf="@id/btn_up"
            android:id="@+id/btn_rightstop" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_rightdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_down"
            app:layout_constraintTop_toBottomOf="@id/btn_stop"
            android:id="@+id/btn_rightdown" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_leftup"
            app:layout_constraintStart_toEndOf="@id/btn_up"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/btn_leftup" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_leftstop"
            app:layout_constraintStart_toEndOf="@id/btn_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_up"
            android:id="@+id/btn_leftstop" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn_leftdown"
            app:layout_constraintStart_toEndOf="@id/btn_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_down"
            android:id="@+id/btn_leftdown" />

</androidx.constraintlayout.widget.ConstraintLayout>